{
  "manifest_version": 2,
  "name": "Emotion Scanner",
  "version": "1.0",
  "description": "Plugin identificador de emoção de texto",
  "permissions": ["contextMenus", "storage", "activeTab"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}
